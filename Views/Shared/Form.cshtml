@model TPLOCAL1.Models.FormModel
@Html.ValidationSummary(false, "")

<! DOCTYPE html xmlns="http://www.w3.org/1999/xhtml">
<html>
<head>
    <title>HN - TP LOCAL</title>
    <link rel="stylesheet" href="~/resources/Index.css" />
    <link rel="stylesheet" href="~/resources/Form.css" />
</head>
<body>
    <header>
        <img src="~/resources/GroupeHN.png" class="image" alt="GroupeHN" />
        <h1>Formulaire TP HN Avis</h1>
    </header>
    <nav>
        <ul>
            <li><a href="/Home/Index">Accueil</a></li>
            <li><a href="/Home/Index/OpinionList">Liste avis</a></li>
        </ul>
    </nav>
    <section>
        <p>
           @* Tableau des informations personnelles *@
            <form asp-action="ValidationFormulaire" asp-controller="Home" method="post">
                <table><caption>Informations personnelles</caption>
                    <tr>
                        <td><label for="nom">Nom</label></td>
                        <td><input type="text" name="nom" value="@Model.Nom"><span asp-validation-for="Nom" class="text-danger"></span></td>
                    </tr>
                    <tr>
                        <td><label for="prenom">Prenom</label></td>
                        <td><input type="text" name="prenom" value="@Model.Prenom"><span asp-validation-for="Prenom" class="text-danger"></span></td>
                    </tr>
                    <tr>
                        <td><label for="genres">Genre</label></td>
                        <td>
                            <select name="genres" value="@Model.Genres">
                                <option value="selection">Sélectionner un sexe</option>
                                <option value="homme">Homme</option>
                                <option value="femme">Femme</option>
                                <option value="autre">Autre</option>
                            </select>
                            <span asp-validation-for="Genres" class="text-danger"></span>
                        </td>
                    </tr>
                    <tr>
                        <td><label for="adresse">Adresse</label></td>
                        <td><input type="text" name="adresse" value="@Model.Adresse"><span asp-validation-for="Adresse" class="text-danger"></span></td>
                    </tr>
                    <tr>
                        <td><label for="codepostal">Code Postal</label></td>
                        <td><input type="number" name="codepostal" value="@Model.Codepostal"><span asp-validation-for="Codepostal" class="text-danger"></span></td>
                    </tr>
                    <tr>
                        <td><label for="ville">Ville</label></td>
                        <td><input type="text" name="ville" value="@Model.Ville"><span asp-validation-for="Ville" class="text-danger"></span></td>
                    </tr>
                    <tr>
                        <td><label for="email">Adresse mail</label></td>
                        <td><input type="email" name="email" value="@Model.Email"><span asp-validation-for="Email" class="text-danger"></span></td>
                    </tr>
                </table>
                @* Tableau des informations de formation suivie *@
                <table>
                    <caption>Informations formation suivie</caption>
                    <tr>
                        <td> <label for="date">Date début formation</label></td>
                        <td><input type="date" name="date" value="@Model.Date"><span asp-validation-for="Date" class="text-danger"></span></td>
                    </tr>
                    <tr>
                        <td><label for="formation">Formation suivie</label></td>
                        <td>
                            <select name="formation" value="@Model.Formation">
                                <option value="selection">Sélectionner une formation</option>
                                <option value="Cobol">Cobol</option>
                                <option value="Objet">Objet</option>
                                <option value="Formation à double compétences">Formation à double compétence</option>
                            </select>
                            <span asp-validation-for="Formation" class="text-danger"></span>
                        </td>
                    </tr>
                </table>
                @* Tableau de la notice de formation *@
                <table>
                    <caption>Avis sur la formation</caption>
                    <tr>
                        <td><label for="cobol">Formation Cobol</label></td>
                        <td><input type="text" name="cobol" value="@Model.Cobol"></td>
                    </tr>
                    <tr>
                        <td><label for="csharp">Formation C#</label></td>
                        <td><input type="text" name="csharp" value="@Model.Csharp"></td>
                    </tr>
                </table>
                <input type="submit" value="Valider">
            </form>
        </p>
    </section>
</body>
</html>
